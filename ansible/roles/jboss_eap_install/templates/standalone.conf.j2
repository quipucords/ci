JBOSS_MODULES_SYSTEM_PKGS='org.jboss.byteman'

JBOSS_LOG_DIR='{{jboss_log_dir}}'

JAVA_OPTS='-Xms1024m -Xmx20480m -XX:MaxPermSize=768m'
